{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "/assets/i18n/**/*", "watchAssets": true },
      { "include": "/assets/public/**/*", "watchAssets": true }
    ]
  },
  "tsConfigPath": "tsconfig.json"
}
